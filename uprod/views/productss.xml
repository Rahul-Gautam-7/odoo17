<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="prod_tree" model="ir.ui.view">
        <field name="name">ProductTree</field>
        <field name="model">prods</field>
        <field name="arch" type="xml">
        
            <tree>
                <field name="name" />
                <field name="ref" />
                <field name="category" />
                <field name="price" />
                <field name="active" />
            </tree>
            
        </field>
    </record>

    <record id="prod_form" model="ir.ui.view">
        <field name="name">ProductForm</field>
        <field name="model">prods</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
            <group>
                <group>
                    <field name="name" />
                    <field name="category" />
                    <field name="price" />
                </group>
            
                <group>
                    <field name="ref" />
                    <field name="active" />
                </group>
            </group>
            </sheet>
        </form>
        </field >
    </record>



    <record id="prod_1" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prods</field>
        <field name="view_mode">tree,form</field>
        <field name="context" >{}</field>
        <field name="help" type='html'>
            <p class="o_view_nocontent_smiling_face">
                Generate new products here..
            </p>
        </field>
    </record>


    <menuitem id='child2'
    action="prod_1"
    name="prs"
    parent="child1"
    sequence="0"
     />
</odoo>